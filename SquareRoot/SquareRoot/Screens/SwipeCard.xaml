					<StackLayout Padding="20">
						<Entry x:Name="TxtCCV" Placeholder="Enter CVV" HorizontalOptions="FillAndExpand" VerticalOptions="Fill">
						</Entry>
						<Entry x:Name="TxtAmonut" Placeholder="Enter Amount" HorizontalOptions="FillAndExpand" VerticalOptions="Fill">
						</Entry>
						<Button x:Name="BtnCharge" Text="Charge" Clicked="OnChargeClicked" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" BackgroundColor="Maroon" TextColor="White">
						</Button>
					</StackLayout>
				</ContentView>
			</RelativeLayout>
		</ScrollView>
	</RelativeLayout>
</ContentPage>