					<Label BackgroundColor="Transparent" IsVisible="true" Font="Large" FontAttributes="None" LineBreakMode="TailTruncation" Text="Swipe Card Now" TextColor="Black" FontSize="20" x:Name="UserInstructionLabel" VerticalOptions="Center"
						HorizontalOptions="Center" />
				</ContentView>
				<!-- this is view,we can add controls to this(ContentView is UIView)-->
